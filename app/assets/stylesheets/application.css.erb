body {
  margin: 0;
  padding: 0;

  height: 100%;

  background-image: url("p1-graz.jpg");

  font-family: 'PT Sans', 'Verdana', sans-serif;
  font-size: 18px;

  color: #000;
}


h1, h2, h3, h4, h5, h6 {
  font-family: 'Lora', serif;
}


p, li, ol, ul, td {
  font-family: 'PT Sans', 'Verdana', sans-serif;
  font-size: 18px;
  color: black;
}


input {
  font-size: 18px;
}


a, a:visited {
  color: #222;
  text-decoration: none;
}


a:active, a:hover {
  color: #444;
  border-bottom: 1px dotted black;
}


input {
  font-family: 'PT Sans', 'Verdana', sans-serif;
  font-style: italic;

  color: #eee;

  border: 1px solid #444;
  border-radius: 6px;

  background: url("/assets/jquery-ui/dark-hive/ui-bg_highlight-soft_35_222222_1x100.png")
      repeat-x scroll 50% 50% #222222;
}

input:active, input:focus {
  font-weight: bold;

  background: url("/assets/jquery-ui/dark-hive/ui-bg_highlight-soft_33_003147_1x100.png")
      repeat-x scroll 50% 50% #003147;
}


*[contenteditable="true"] {
  background-color: white;
  opacity: 0.4;

  border: 1px dotted black;

  color: black;
}


li.editable {
  min-height: 1.6em;

  padding-top: 0.2em;
  padding-bottom: 0.2em;
}


li.editable-active {
  background-color: rgba(255, 255, 255, 0.4);
}


li.editable button.ui-button-icon-only {
  width: 1.6em;
  height: 1.6em;
}


.ui-dialog label, .ui-dialog input, .ui-dialog select {
  display: block;
}


.ui-dialog label {
  margin-top: 8px;
}


div#navigation-box {
  height: 88px;
  width: 100%;

  position: absolute;

  top: 0px;
  left: 0px;

  margin: 0;
  padding: 0;

  background-image: url('ui-bg_loop_25_000000_21x21.png');
  background-repeat: repeat;

  overflow: hidden;
}


span#logo {
  width: 350px;
  height: 86px;
  float: left;
  margin-right: 50px;
}


#navigation-box ul {
  height: 74px;

  margin: 0;
  padding-top: 10px;
}


#navigation-box .navicon {
  display: block;
}


#navigation-box li {
  font-family: 'PT Sans', 'Verdana', sans-serif;

  display: block;

  width: 96px;
  min-height: 48px;

  float: left;

  text-align: center;

  margin: 0px;
  padding: 2px;
}


#navigation-box li.active {
  border: 2px inset #ddd;
  border-bottom: 2px solid black;

  box-shadow: inset -8px -8px 10px 1px #003147;

  margin: 0;
  padding: 0;

  height: 72px;
}


#navigation-box a,a:visited {
  color: white;
  text-decoration: none;
  font-weight: bold;
  font-size: normal;
}


#navigation-box li:hover {
  background-color: #003147 !important;
}


div#content-box {
  position: absolute;
  top: 86px;
  padding: 0;
  width: 100%;
  min-height: calc(100% - 86px);
}


/**
 * A box with rounded edges and smooth light inset shadow, but no hard border.
 */
.content-box {
    padding: 1em;
    margin: 0.5em;

    background-image: url(p1.jpg);

    box-shadow: inset 4px 5px 6px -2px #ccc;
    border-radius: 8px;
}


/**
 * Overrides for UI widgets
 */
.ui-widget {
  font-size: 18px;
}


button.ui-button-icon-only {
  height: 2.4em;
}
