body {
  margin: 0;
  padding: 0;
}


div#navigation-box {
  height: 88px;
  width: 100%;

  position: absolute;

  top: 0px;
  left: 0px;

  margin: 0;
  padding: 0;

  background-image: url(<%= asset_path 'ui-bg_loop_25_000000_21x21.png' %>);
  background-repeat: repeat;

  overflow: hidden;
}


span#logo {
  width: 350px;
  height: 86px;
  float: left;
  margin-right: 50px;
}


#navigation-box ul {
  min-height: 48px;
}


#navigation-box .navicon {
  display: block;
}


#navigation-box li {
  display: block;

  width: 96px;
  min-height: 48px;

  float: left;

  text-align: center;

  margin: 2px;
}


#navigation-box li.active {
  border: 2px inset #ddd;
  border-bottom: 0;

  margin: 0;
  margin-bottom: 2px;

  height: 72px;
}


#navigation-box a,a:visited {
  color: white;
  text-decoration: none;
  font-weight: bold;
  font-size: small;
}


#navigation-box li:hover {
  background-color: #003147 !important;
}


div#content-box {
  position: absolute;
  top: 88px;
  padding: 0;
  width: 100%;
}
